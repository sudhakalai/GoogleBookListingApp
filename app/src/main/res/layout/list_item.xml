<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    android:padding="@dimen/activity_padding">

    <LinearLayout
        android:layout_width="@dimen/zero_dips"
        android:layout_height="match_parent"
        android:layout_weight="1">

    <ImageView
        android:layout_width="64dp"
        android:layout_height="96dp"
        android:id="@+id/image"
        android:layout_gravity="center"
        android:src="@drawable/noimage"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="@dimen/zero_dips"
        android:layout_height="match_parent"
        android:layout_weight="4"
        android:paddingLeft="@dimen/activity_left_padding"
        android:orientation="vertical">

    <TextView
        android:id="@+id/title_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="bottom"
        android:maxLines="2"
        android:paddingBottom="@dimen/activity_bottom_padding"
        android:textColor="@android:color/black"
        android:textSize="@dimen/bookText"
        tools:text="@string/bookName" />

    <TextView
        android:id="@+id/author_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="top"
        android:maxLines="2"
        android:textColor="@android:color/black"
        android:textSize="@dimen/authorText"
        tools:text="@string/bookAuthor" />
    </LinearLayout>
</LinearLayout>